<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.OnTapLyThuyetActivity">
    <androidx.appcompat.widget.Toolbar
        app:titleTextColor="@color/white"
        android:background="#0BA720"
        app:title="Khái niệm và quy tắt"
        android:id="@+id/aotlt_toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/aotlt_txtnoidung"
            android:layout_width="match_parent"
            android:text="Nội dung"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/aotlt_caudiemliet"
            android:layout_width="match_parent"
            android:text="Câu điểm liệt"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/aotlt_imghinh"
            android:layout_width="wrap_content"
            android:src="@drawable/icon"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/aotlt_txtcaua"
            android:text="Câu A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/aotlt_txtcaub"
            android:text="Câu B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/aotlt_txtcauc"
            android:text="Câu C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/aotlt_txtcaud"
            android:text="Câu D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_button"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/aotlt_btnback"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/ic_baseline_trai"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="4dp"
                    android:layout_height="50dp"
                    android:text="|"
                    android:textColor="#fff"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/aotlt_txtcau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.4"
                    android:gravity="center"
                    android:text="Câu 1"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="4dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="|"
                    android:textColor="#fff"
                    android:textSize="35dp" />

                <Button
                    android:id="@+id/aotlt_btnnext"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/ic_baseline_phai"
                    android:textColor="#fff" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>