<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".Activity.Tab_Test_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="60dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/toppicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Làm bài kiểm tra"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/ftt_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="00:59"
                android:textColor="#FFC107" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ftt_txt_socautraloi"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_mau_home"
        android:elevation="1dp"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#1F6888"
        android:text="1/25"/>

    <TextView
        android:id="@+id/ftt_txt_noidungcauhoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Nội dung câu hỏi ..."
        android:background="@drawable/background_cauhoi"
        android:gravity="center"
        android:minHeight="10dp"
        android:padding="20dp"
        android:textColor="#CC000000"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ftt_txt_cautraloi1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#1F6888"
        android:background="@drawable/backgroung_cautraloi"
        android:text="câu trả lời 1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ftt_txt_cautraloi2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#1F6888"
        android:background="@drawable/backgroung_cautraloi"
        android:text="Câu trả lời 2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ftt_txt_cautraloi3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#1F6888"
        android:background="@drawable/backgroung_cautraloi"
        android:text="Câu trả lời 3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ftt_txt_cautraloi4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#1F6888"
        android:background="@drawable/backgroung_cautraloi"
        android:text="Câu trả lời 4"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ftt_btn_chuyencau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#1F6888"
        android:background="@drawable/background_button"
        android:text="Chuyển câu "/>


</LinearLayout>